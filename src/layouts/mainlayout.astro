---
// Imports Cascading Style Sheets into document.
import '../CSS/styles.css';

// Imports ViewTransistion to allow tranisitions from one page to another.
// Can also transition between one image to another using "transistion:name='id'" on both images.
// With Astro 4.0, prefetching was enabled with all view transitions. When you hover over a link, it will prefetching the packets.
import { ViewTransitions } from 'astro:transitions';

// Sets the title in the tab bar for each page.
let title = 'Concordia University Esports';
---

<!DOCTYPE html>
<html lang="en">

    <head>
        <!-- Meta Tags. -->
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Imports google fonts into document to allow many different fonts. -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans&display=swap" rel="stylesheet">

        <!-- Imports Bootstrap 5.2.2 into the document. -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

        <!-- Imports logo onto the tab on every screen. -->
        <link rel="icon" href="/Images/bulldog-logo.png">

        <!-- Title for pages. -->
        <title>{title}</title>

        <!--Importing ViewTransistion for a transition from one page to anther. -->
        <ViewTransitions />
        <script src="https://code.jquery.com/jquery-3.6.1.min.js"
            integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
    </head>

    
    <body>
        <!-- Navigation bar at the top of every screen.-->
        <header class="mb-5">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <nav class="navbar navbar-light bg-light">
                        <a class="navbar-brand" href="/">
                            <img src="/Images/bulldog-logo.png" width="30" height="30" class="d-inline-block align-top"
                                alt="Main Background Image">
                            Concordia Esports
                        </a>
                    </nav>

                    <!-- Responsive when in mobile view. Will condense everything into a drop down menu. -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Content inside of the navigation bar. -->
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/articles">Articles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/schedule">Schedule</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    Games
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/overwatch">Overwatch</a></li>
                                    <li><a class="dropdown-item" href="/rl">Rocket League</a></li>
                                    <li><a class="dropdown-item" href="/valorant">Valorant</a></li>
                                    <li><a class="dropdown-item" href="/league">League of Legends</a></li>
                                    <li><a class="dropdown-item" href="/ssb">Super Smash Bros.</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/contact">Contact/Information</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <!-- When you call the Mainlayout on other astro pages, in between the two tags is where 
        your Main information is going to go. -->
        <slot></slot>

        <footer>
            <div class="container">
                <hr>
                <div class="row">

                    <!-- Navigation links. -->
                    <div class="col-6 col-md-2 mb-3">
                        <h5>General:</h5>
                        <ul class="nav flex-column">
                            <li class="nav-item mb-2"><a href="/" class="nav-link p-0 text-muted">Home</a></li>
                            <li class="nav-item mb-2"><a href="/articles" class="nav-link p-0 text-muted">Articles</a>
                            </li>
                            <li class="nav-item mb-2"><a href="/schedule" class="nav-link p-0 text-muted">Schedule</a>
                            </li>
                        </ul>
                    </div>

                    <!-- Navigation links. -->
                    <div class="col-6 col-md-2 mb-3">
                        <h5>Games:</h5>
                        <ul class="nav flex-column">
                            <li class="nav-item mb-2"><a href="/overwatch" class="nav-link p-0 text-muted">Overwatch</a>
                            </li>
                            <li class="nav-item mb-2"><a href="/rl" class="nav-link p-0 text-muted">Rocket League</a>
                            </li>
                            <li class="nav-item mb-2"><a href="/valorant" class="nav-link p-0 text-muted">Valorant</a>
                            </li>
                            <li class="nav-item mb-2"><a href="/league" class="nav-link p-0 text-muted">League of
                                    Legends</a></li>
                            <li class="nav-item mb-2"><a href="/ssb" class="nav-link p-0 text-muted">Super Smash
                                    Bros</a></li>
                        </ul>
                    </div>

                    <!-- Contact Information. -->
                    <div class="col-auto">
                        <h5>Contact:</h5>
                        <ul class="nav flex-column">
                            <li class="nav-item mb-2">Learn more about Esports and Ryan Hinds <a
                                    href="/contact">HERE.</a></li>
                            <li class="nav-item mb-2">Phone: 402-643-7141</li>
                            <li class="nav-item mb-2">Email: ryan.hinds@cune.edu</li>
                            <br>
                        </ul>
                    </div>

                    <hr>

                    <!-- Social Media information. -->
                    <div class="d-flex flex-column flex-sm-row justify-content-between">
                        <p>Concordia University, Nebraska Esports Team</p>
                        <p><b><i>*Not an official Concordia University Nebraska website*</i></b></p>
                        <ul class="list-unstyled d-flex">

                            <!-- Instagram. -->
                            <li class="ms-3"><a href="https://instagram.com/cune_esports?igshid=MzRlODBiNWFlZA=="><img
                                        src="../Images/socials/Instagram.png" width="24" height="24"></a></li>

                            <!-- X(Twitter). -->
                            <li class="ms-3"><a href="https://x.com/cune_esports?s=11&t=mp6-VVBHHuIyz58rsIrgMQ"><img
                                        src="../Images/socials/Twitter.png" width="24" height="24"></a></li>

                            <!-- Discord. -->
                            <li class="ms-3"><a href="https://discord.gg/u89quJe5zM"><img src="../Images/socials/discord.png"
                                        width="30" height="30"></a></li>
                            
                            <!-- Twitch. -->
                            <li class="ms-3"><a href="https://twitch.tv/cune_esports"><img src="../Images/socials/Twitch.png"
                                        width="33" height="33"></a></li>

                            <!-- Facebook. -->
                            <li class="ms-3"><a
                                    href="https://www.facebook.com/profile.php?id=100085233332133&mibextid=LQQJ4d"><img
                                        src="../Images/socials/facebook.png" width="28" height="28"></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>

        <!-- Imports Bootstrap 5.2.2 into the document. -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous">
        </script>
    </body>
    

</html>

